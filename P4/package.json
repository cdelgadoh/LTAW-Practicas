{
    "name": "mi-electron-app",
    "description": "Estas es mi primera aplicaci√≥n de escritorio en Electron",
    "version": "0.1.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "electron-builder": {
        "appId": "my-chat",
        "category": "your.app.category.type",
        "dmg": {
          "contents": [
            {
              "x": 110,
              "y": 150
            },
            {
              "x": 240,
              "y": 150,
              "type": "link",
              "path": "/Applications"
            }
          ]
        },
        "linux": {
          "target": [
            "AppImage"
          ],
          "category": "Utility"
        },
        "win": {
          "target": "squirrel",
          "icon": "build/icon.ico"
        }
      },
    "devDependencies": {
        "electron": "^18.2.3",
        "electron-builder": "^23.0.3"
    },
    "dependencies": {
        "colors": "^1.4.0",
        "express": "^4.18.1",
        "ip": "^1.1.8",
        "snake-names": "^1.0.9",
        "socket.io": "^4.5.1",
        "websocket": "^1.0.34"
    }
}
